<Page x:Class="CollegeMS.View.Pages.Staff.StudentList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CollegeMS.View.Pages.Staff"
      mc:Ignorable="d" 
      xmlns:userControls="clr-namespace:CollegeMS.View.UserControls"
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{StaticResource staffViewModel}"
      Title="MyCourse">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <userControls:TitleBar/>

        <Grid Grid.Row="1">
            <Border >
                <Image Source="/Assets/YOUR COURSES MODIFED.png" Stretch="Fill"/>
            </Border>

            <!-- Here Datagrid for table -->
            <DataGrid x:Name="yourCoursesGrid" RowStyle="{StaticResource RowHover}"  HeadersVisibility="Column" CanUserResizeColumns="False"  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" IsReadOnly="True" Background="#fdf3f1" Foreground="Black" FontWeight="Bold" Margin="253,97,39,47" ItemsSource="{Binding students , Mode=TwoWay , UpdateSourceTrigger=PropertyChanged}" BorderBrush="Black">
                <DataGrid.Columns>
                    <DataGridTextColumn HeaderStyle="{StaticResource HeaderBG}" Header="ID" Binding="{Binding id}" Width="*"/>
                    <DataGridTextColumn HeaderStyle="{StaticResource HeaderBG}" Header="Name" Binding="{Binding Name}" Width="auto" />
                    <DataGridTextColumn HeaderStyle="{StaticResource HeaderBG}" Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn HeaderStyle="{StaticResource HeaderBG}" Header="BirthDate" Binding="{Binding BirthDate}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!--Here Back Button -->
            <Button Command="{Binding navigationComand}" CommandParameter="DashBoardStaff" Content="↩" FontSize="20" Style="{StaticResource triggerrr}" Margin="42,366,648,21" />
        </Grid>
    </Grid>
</Page>
