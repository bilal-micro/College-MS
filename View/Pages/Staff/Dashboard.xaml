<Page x:Class="CollegeMS.View.Pages.Staff.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CollegeMS.View.Pages.Staff"
      mc:Ignorable="d" 
      xmlns:userControls="clr-namespace:CollegeMS.View.UserControls"
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{StaticResource staffViewModel}"
      Title="Dashboard">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <userControls:TitleBar/>
        <!--DashBoard png  -->
        <Border Grid.Row="1" Panel.ZIndex="0">
            <Image Source="\Assets\dashboard_modified.png" Stretch="Fill"/>
        </Border>
        <!--DashBoard buttons in border do not make Buttons in one border pls because it does not run   -->
        <TextBlock Grid.Row="1" Text="College Management System" Foreground="White" FontSize="35" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe UI" >
        </TextBlock>

        <Button Command="{Binding navigationComand}" CommandParameter="AllStudents" Grid.Row="1" Content="Student" Margin="37,271,663,116" Style="{StaticResource ButtonTransparent}" />

        <Button Command="{Binding navigationComand}" CommandParameter="AllDoctors" Grid.Row="1" Content="Doctors" Margin="200,271,500,116" Style="{StaticResource ButtonTransparent}" />

        <Button Command="{Binding navigationComand}" CommandParameter="AllCourses" Grid.Row="1" Content="Courses"   Margin="364,271,336,116" Style="{StaticResource ButtonTransparent}" RenderTransformOrigin="0.53,0.561" />

        <Button Command="{Binding navigationComand}" CommandParameter="AddDoctor" Grid.Row="1" Content="Regist Doctor" Margin="519,271,181,116" Style="{StaticResource ButtonTransparent}" />
        <Button Command="{Binding navigationComand}" CommandParameter="AddStudent" Grid.Row="1" Content="Regist Student" Margin="668,271,32,116" Style="{StaticResource ButtonTransparent}" />

    </Grid>
</Page>
