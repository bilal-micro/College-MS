<Page x:Class="CollegeMS.View.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CollegeMS.View.Pages"
      xmlns:userControls="clr-namespace:CollegeMS.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{StaticResource loginViewModel}"
      Title="Login">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <userControls:TitleBar/>

        <Image Grid.Row="1" Margin="0,-1,0,-12" Source="/Assets/Login panel 144444final.jpg" Stretch="Fill"/>
        <Grid Grid.Row="1" Margin="9,-3,-9,3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="123"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="477*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="182"/>
                <RowDefinition Height="33"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="14"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="41"/>
            </Grid.RowDefinitions>
            <Border 
                CornerRadius="100" 
                Grid.Column="1" 
                Grid.Row="4"
                HorizontalAlignment="Center"
                Width="190"
                Height="118" 
                VerticalAlignment="Center">
                <Button Command="{Binding Login}" Content="Login"  Style="{StaticResource Login}" Height="40" Margin="19,28,19,50" />

            </Border>
            <Border  
                CornerRadius="9" 
                Grid.Column="1" 
                Grid.Row="1" 
                Background="#f2eceb"  
                BorderThickness="1"
                HorizontalAlignment="Center"
                Width="162"
                Height="29" Margin="0,3,0,1"
                >

                <TextBlock x:Name="userblock"
                    Text="Username"
                    VerticalAlignment="Center" 
                    Foreground="Black" 
                    HorizontalAlignment="Left"
                    Width="150" Margin="6,0,0,0" 
                    
                    />

            </Border>

            <Border
                CornerRadius="9" 
                Grid.Column="1"
                Grid.Row="1" 
                Background="Transparent" 
                BorderThickness="1"
                HorizontalAlignment="Center"
                Width="161"
                Height="29"
                
                />


            <Border 
                CornerRadius="5" 
                Grid.Column="1" 
                Grid.Row="2" 
                Background="#f2eceb"  
                BorderThickness="1" 
                HorizontalAlignment="Center"
                Width="162" Height="30" VerticalAlignment="Center">
                <TextBlock x:Name="passblock" 
                  
                           Margin="5,0,0,0"
                           Text="Password" 
                           VerticalAlignment="Center" 
                           Foreground="Black" 
                           HorizontalAlignment="Right"
                           Width="150" />
            </Border>
            <TextBox x:Name="Username"
                Width="161"
                Height="29" 
                Text="{Binding userNmae , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Grid.Column="1" Grid.Row="1"
                Margin="20,3,19,1" 
                VerticalContentAlignment="Center"
                FontWeight="Light"
                />
            <TextBox x:Name="Password"
                Width="161" 
                Height="29" 
                Text="{Binding password , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Grid.Column="1" 
                Grid.Row="2"
                Margin="20,2,19,1"
                VerticalContentAlignment="Center"
                FontWeight="Light"
                
                />
        </Grid>
    </Grid>
</Page>
